<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            {{#each model as |message|}}
                <a href="#" class="list-group-item">
                    <div class="row">
                        <div class="col-md-3">
                            <i class="citrix-icon citrix-icon-person-solid citrix-icon-4x"></i>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-12"><h4>{{message.from}}</h4></div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">{{message.subject}}</div>
                            </div>
                        </div>
                    </div>
                </a>
            {{/each}}
        </div>
    </div>
</div>
